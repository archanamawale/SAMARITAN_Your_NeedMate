<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:background="@drawable/bg">

    <TextView
        android:id="@+id/txtsignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/courgette"
        android:gravity="center_horizontal"
        android:text="SignUp to Samaritan"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="36dp"></TextView>
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Full Name"
        android:id="@+id/edt_fullname"
        android:background="@drawable/rounded_bg"
        android:layout_below="@+id/txtsignup"
        android:layout_marginTop="50dp"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:inputType="textPersonName"></EditText>
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Phone Number"
        android:id="@+id/edt_phno"
        android:background="@drawable/rounded_bg"
        android:layout_below="@+id/edt_fullname"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:inputType="number"></EditText>
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Date of Birth"
        android:id="@+id/edt_dob"
        android:textSize="18dp"
        android:background="@drawable/rounded_bg"
        android:layout_below="@+id/edt_phno"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:padding="10dp"></TextView>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:id="@+id/edt_semail"
        android:background="@drawable/rounded_bg"
        android:layout_below="@+id/edt_dob"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:inputType="textWebEmailAddress"></EditText>
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:id="@+id/edt_spass"
        android:background="@drawable/rounded_bg"
        android:ems="10"
        android:layout_below="@+id/edt_semail"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:inputType="textPersonName"></EditText>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_signup"
        android:text="SignUp"
        android:background="@drawable/rounded_button"
        android:layout_below="@+id/edt_spass"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:textSize="20dp"></Button>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/relLayout1"
        android:layout_below="@id/btn_signup">
        <View
            android:layout_width="120dp"
            android:layout_height="2dp"
            android:background="#000"
            android:layout_marginLeft="30dp"
            android:id="@+id/view1"></View>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"
            android:textColor="#000"
            android:layout_marginTop="-13dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:id="@+id/txtor"></TextView>
        <View
            android:layout_width="120dp"
            android:layout_height="2dp"
            android:background="#000"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:id="@+id/view2"></View>
    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textSize="20dp"
        android:layout_below="@+id/relLayout1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:id="@+id/btn_slogin"></Button>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an Account...."
        android:textSize="20dp"
        android:layout_below="@+id/relLayout1"
        android:layout_marginTop="30dp"
        android:textColor="#000"
        android:layout_marginLeft="30dp"></TextView>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_bar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        style="@style/Widget.AppCompat.ProgressBar"
        android:visibility="invisible"></ProgressBar>
</RelativeLayout>